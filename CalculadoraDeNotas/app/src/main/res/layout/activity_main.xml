<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="?android:attr/textColorLink">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nota1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorError" android:padding="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" android:importantForAutofill="no" android:hint="@string/nota_1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nota2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorError" android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nota1" android:layout_marginTop="40dp"
            android:importantForAutofill="no" android:hint="@string/nota_2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/falta"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorError" android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nota2" android:layout_marginTop="40dp"
            android:importantForAutofill="no" android:hint="@string/faltas"/>
    <Button
            android:text="@string/Calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/falta"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#D900FF" android:textColor="#000000" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="178dp" android:layout_marginStart="178dp" android:layout_marginEnd="175dp"
            android:layout_marginRight="175dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="201dp"
            android:gravity="center" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>