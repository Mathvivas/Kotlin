<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="?android:attr/textColorLink">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nota 1"
            android:ems="10"
            android:id="@+id/nota1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorError" android:padding="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nota 2"
            android:ems="10"
            android:id="@+id/nota2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorError" android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nota1" android:layout_marginTop="84dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Faltas"
            android:ems="10"
            android:id="@+id/falta"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorError" android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nota2" android:layout_marginTop="84dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>